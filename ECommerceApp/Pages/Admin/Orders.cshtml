@page
@model ECommerceApp.Pages.Admin.OrdersModel
@{
    ViewData["Title"] = "Orders";
    Layout = "_Layout";
}

<!Doctype html>
<html>

<body>

<h1>Orders</h1>
    <div class="container" style="margin-top:30px">
        <h1>Orders</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Orders</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ReceiptOrders)
                {
                <tr>
                    <td><a href="/Admin/OrderDetails/@item.ID">Order Details</a></td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Date</td>
                    <td>@item.Amount</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

