@page
@model ECommerceApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="StyleSheet.css" />
</head>

<body>



    <div class="container" style="margin-top:20px;">

        <form method="post">
            <div asp-validation-summary="All"></div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="RegisterData.Email">Email Address</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="email" asp-for="RegisterData.Email">
                    <span asp-validation-for="RegisterData.Email"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="RegisterData.FirstName">First Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="firstName" asp-for="RegisterData.FirstName">
                    <span asp-validation-for="RegisterData.FirstName"></span>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="RegisterData.LastName">Last Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="lastName" asp-for="RegisterData.LastName">
                    <span asp-validation-for="RegisterData.LastName"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="RegisterData.Birthday">Birthday (MM/DD/YYYY)</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="birthday" asp-for="RegisterData.Birthday">
                    <span asp-validation-for="RegisterData.Birthday"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="RegisterData.PhoneNumber">Phone Number (XXX-XXX-XXXX)</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="phoneNumber" asp-for="RegisterData.PhoneNumber">
                    <span asp-validation-for="RegisterData.PhoneNumber"></span>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="RegisterData.Password">Password</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="password" asp-for="RegisterData.Password">
                    <span asp-validation-for="RegisterData.Password"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="RegisterData.ConfirmPassword">Confirm Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="confirmPassword" asp-for="RegisterData.ConfirmPassword">
                    <span asp-validation-for="RegisterData.ConfirmPassword"></span>
                </div>
            </div>



            <div class="row">
                <div class="col-sm-9 offset-sm-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>

        </form>

    </div>
</body>


